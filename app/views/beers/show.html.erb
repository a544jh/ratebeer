<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery_id %>
</p>

<% if !@beer.ratings.empty? %>
<p>
	Has <%= @beer.ratings.count %> ratings, average <%= @beer.ratings.average :score %>
</p>
<% end %>

